@page
@model LoginModel

<link rel="stylesheet" href="~/css/login.css">
<main class="set-center">
    <div class="login">
        <form id="account" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <h2 class = "login__namer">Login</h2>
            <div class="wrapper set-center">
                <label class = "login__input-namer" asp-for="Input.Email">Enter your login</label>
                <input class="login__field" asp-for="Input.Email"/>
            </div>
            <div class="wrapper set-center">
                <label class = "login__input-namer" asp-for="Input.Password">Enter your password</label>
                <input class="login__field" asp-for="Input.Password"/>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="wrapper set-center">
                <div class="checkbox">
                    <label asp-for="Input.RememberMe">
                        <input asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
            </div>
            <div class="wrapper set-center">
                <input class = "set-shadow-white login__field-submit pointer" type="submit" value="Log in" required>
            </div>
            <div class="wrapper login__input-restore pointer">
                <span><a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a></span>
            </div>
            <div class="wrapper login__input-restore pointer">
                <span><a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a></span>
            </div>    
        </form>
    </div>
</main>
