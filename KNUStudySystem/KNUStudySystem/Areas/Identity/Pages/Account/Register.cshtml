@page
@model RegisterModel

<link rel="stylesheet" href="~/css/registration.css" />
<main class="set-center">
    <div class="login">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2 class = "login__namer">Registration</h2>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="wrapper set-center">  
                <label class = "login__input-namer" asp-for="Input.FirstName"></label>  
                <input asp-for="Input.FirstName" class="login__field"/>  
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>  
            </div>  
            <div class="wrapper set-center">  
                <label class = "login__input-namer" asp-for="Input.LastName"></label>  
                <input asp-for="Input.LastName" class="login__field"/>  
                <span asp-validation-for="Input.LastName" class="text-danger"></span>  
            </div>  
            <div class="wrapper set-center">
                <label class = "login__input-namer" asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="login__field"/>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="wrapper set-center">
                <label class = "login__input-namer" asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="login__field"/>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="wrapper set-center">
                <label class = "login__input-namer" asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="login__field"/>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="wrapper set-center">
                <input class = "set-shadow-white login__field-submit pointer" type="submit" value="Sign up" required>
            </div>
        </form>
    </div>
</main>
