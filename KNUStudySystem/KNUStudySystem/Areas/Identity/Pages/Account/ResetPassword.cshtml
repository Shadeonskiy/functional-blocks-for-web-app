@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset password";
}

<link rel="stylesheet" href="~/css/password.css" asp-append-version="true"/>

<div class="password">
    <div class="password__container">
        <div class="password__headline-wrapper">
            <h2>@ViewData["Title"]</h2>
            <h4>Reset your password.</h4>
        </div>
        <div class="password__input-container">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input asp-for="Input.Code" type="hidden" />
                <div class="form-group">
                    <label class="password__span" asp-for="Input.Email"></label></br>
                    <input class="password__input input-box" asp-for="Input.Email" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="password__span" asp-for="Input.Password"></label></br>
                    <input class="password__input input-box" asp-for="Input.Password" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="password__span" asp-for="Input.ConfirmPassword"></label></br>
                    <input class="password__input input-box" asp-for="Input.ConfirmPassword" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <input class="password__input pointer" type="submit" value="Reset password">
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
