@using Microsoft.AspNetCore.Identity
@using KNUStudySystem.Areas.Identity.Data

@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <div align = "right">
        <a id="manage" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@UserManager.GetUserName(User)</a>
    </div>
    <div align = "right">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </div>
}
else
{
    <div align = "right">
        <a id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </div>
    <div align = "right">
        <a id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </div>
}
